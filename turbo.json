{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "cache": true
    },
    "dev": {
      "dependsOn": ["^dev"],
      "outputs": ["dist/**", ".next/**"],
      "cache": true
    },
    "prod": {
      "dependsOn": ["^prod"],
      "outputs": ["dist/**", ".next/**"],
      "cache": true
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "outputs": []
    },
    "format": {
      "outputs": []
    }
  }
}
